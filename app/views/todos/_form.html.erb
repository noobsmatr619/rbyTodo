<%= form_with(model: todo) do |form| %>
  <% if todo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(todo.errors.count, "error") %> prohibited this todo from being saved:</h2>

      <ul>
        <% todo.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field mb-3">
    <%= form.label :task_name,class: "form-label " %>
    <%= form.text_field :task_name,class:"form-control"  %>
  </div>

  <div class="field ">
    <%= form.label :task_created_at,class: "form-label"  %>
    <%= form.datetime_select :task_created_at,class:"form-select" %>
  </div>

  <div class="field">
    <%= form.label :task_editted_at ,class: "form-label" %>
    <%= form.datetime_select :task_editted_at,class:"form-select" %>
  </div>

  <div class="field">
    <%= form.label :task_done_by,class: "form-label"  %>
    <%= form.datetime_select :task_done_by,class:"form-select" %>
  </div>

  <div class="field mb-3">
    <%= form.label :task_desc,class: "form-label"  %>
    <%= form.text_field :task_desc,class:"form-control" %>
  </div>
 <div class="field mb-3">
    
    <%= form.number_field :user_id,id: :todo_user_id,class:"form-control",value: current_user.id,type: :hidden%>
  </div>
 
  <div class="actions">
    <%= form.submit class: "btn btn-success" %>
  </div>
<% end %>

